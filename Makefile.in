SRC=src

all : lib

lib : resources/libraries/%LIB-NAME%

# 'all', with compilation warnings
debug :
	%MAKE% "DBG=-Wall"  all

resources/libraries/%LIB-NAME% : $(SRC)/complex%O% $(SRC)/polynomial%O% $(SRC)/matrix%O% $(SRC)/permutation%O%
	%LD% %LDSHARED% %LDFLAGS% %LDOUT%resources/libraries/%LIB-NAME% \
		$(SRC)/complex%O% \
		$(SRC)/polynomial%O% \
		$(SRC)/matrix%O% \
		$(SRC)/permutation%O% \
		%LIB-LDFLAGS%

%%O%: %.c
	%CC% -I $(SRC) -c %CCSHARED% %CCFLAGS% -o $@ $< %LIB-CFLAGS% $(DBG)

clean :
	@rm -f $(SRC)/*%O% resources/libraries/*%LIB-NAME%
